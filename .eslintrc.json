{
  "root": true,
  "env": {
    "es6": true,
    "node": true
  },
  "globals": {
  },
  "extends": [
    "airbnb/base"
  ],
  "ecmaFeatures": {
    "templateStrings": true
  },
  "rules": {
    "strict": 0,
    "no-console": 0,
    "indent": [
      2,
      2
    ],
    "linebreak-style": [
      2,
      "unix"
    ],
    "quotes": [
      2,
      "single"
    ],
    "semi": [
      2,
      "always"
    ]
  }
}
